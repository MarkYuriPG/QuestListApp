<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colors for light mode -->
        <item name="colorPrimary">@color/flesh</item>
        <item name="colorPrimaryDark">@color/caramel</item>
        <item name="colorAccent">@color/caramel</item>

    </style>

    <style name="AppTheme_Dark" parent="Theme.AppCompat">
        <!-- Colors for dark mode -->
        <item name="colorPrimary">@color/caramel</item>
        <item name="colorPrimaryDark">@color/flesh</item>
        <item name="colorAccent">@color/pastel_yellow</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.NoActionBar">

        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppThemee" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>


</resources>